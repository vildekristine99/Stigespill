package no.hvl.dat109;

/**
 * @author Vilde Kristine Fossum
 *
 */
public class Brikke {
	private Rute rute;
	private Brett brett;
	
	/**
	 * 
	 */
	public Brikke(Brett brett) {
		this.brett = brett;
	}



	/**
	 * Flytter brikken et gitt antall steg
	 * @param sum
	 */
	public void flytt(Integer sum) {
		Rute nyRute = brett.finnRute(rute, sum);
		setRute(nyRute);
	}
	
	
	private void setRute(Rute rute) {
		this.rute = rute;	
	}
}
